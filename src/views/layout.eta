<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= it.title %></title>
    <link rel="stylesheet" href="pre.css" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body class="b-tertiary">
    <nav class="navbar">
      <div class="left">
        <div class="logo">
        <a href="/" class="c-primary">momo.me</a>
        </div>
      </div>
      <div class="right">
      <% if(it.ads){ %>
        <a class="btn b-primary c-white" id="skip-btn">Skip ads in </a>
        <% } else { %>
        <a href="#" class="c-gray hoverfx" data-text="Login">Login</a>
        <a href="#" class="c-tertiary hoverfx luxury" data-text="Sign Up">Sign Up</a>
        <a class="btn b-secondary c-white luxury shrink go-to-shorten">Shorten Now</a>
        <% } %>
      </div>
    </nav>
    <div class="screen b-white">
      <section class="main">
        <%~ it.body %>
      </section>
      <quick-shorten/>
    </div>
    <footer class="b-tertiary c-white">
      <div>
        <a class="hoverfx" data-text="Terms of Usage" data-target="terms">Terms of Usage</a
        ><a class="hoverfx" data-text="Privacy Policy" data-target="privacy"
          >Privacy Policy</a
        >
      </div>
      <div>Copyright &copy; 2020 momo.me</div>
    </footer>
    <custom-modal title="Terms of Usage" data-label="terms"></custom-modal>
    <custom-modal title="Privacy" data-label="privacy"></custom-modal>
    <script src="quick-shorten.js"></script>
    <script src="custom-modal.js"></script>
    <script src="regular.js"></script>
    <% if(it.ads){ %>
    <script src="Countdown.js"></script>
    <script>
      let countdown = new Countdown(<%= it.ads.seconds %>, "<%= it.ads.link %>");
      countdown.init();
    </script>
    <% } %>
  
  </body>
</html>
