<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= it.title %></title>
    <link rel="stylesheet" href="pre.css" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="left">
        <div class="logo c-primary">momo.me</div>
      </div>
      <div class="right">
      <% if(it.ads){ %>
        <a class="btn b-primary c-white" id="skip-btn">Skip ads in </a>
        <% } else { %>
        <a href="#" class="c-gray hoverfx" data-text="Login">Login</a>
        <a href="#" class="c-tertiary hoverfx" data-text="Sign Up">Sign Up</a>
        <a href="#" class="btn b-secondary c-white">Shorten Now</a>
        <% } %>
      </div>
    </nav>
    <div class="screen">
      <section class="main">
        <%~ it.body %>
      </section>
      <section class="action b-primary">
        <h2 class="c-white">Shorten Now</h2>
        <div class="input-container">
          <input
            type="text"
            class="input"
            placeholder="https://longassurl.com/jibberishâ€¦"
          />
          <button class="c-white b-secondary btn">Shrink</button>
        </div>
        <p class="c-gray2">
          Guest shortened links are only active for 30 minutes, and contain ads.
          <a href="#" class="c-gray hoverfx" data-text="Login">Login</a> for
          timeless and ad-free experience.
        </p>
      </section>
    </div>
    <footer class="b-tertiary c-white">
      <div>
        <a href="#" class="hoverfx" data-text="Terms of Usage">Terms of Usage</a
        ><a href="#" class="hoverfx" data-text="Privacy Policy"
          >Privacy Policy</a
        >
      </div>
      <div>Copyright &copy; 2020 momo.me</div>
    </footer>
    <% if(it.ads){ %>
    <script src="Countdown.js"></script>
    <script>
      let countdown = new Countdown(<%= it.ads.seconds %>, "<%= it.ads.link %>");
      countdown.init();
    </script>
    <% } %>
  </body>
</html>
